<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView13"
        android:layout_width="192dp"
        android:layout_height="54dp"
        android:padding="16dp"
        android:text="Stock Details"
        android:textColor="@color/border_color"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <TextView
        android:id="@+id/textViewAboutDangote"
        android:layout_width="383dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:background="@color/border_color"
        android:padding="8dp"
        android:text="About Dangote"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailAddress" />

    <TextView
        android:id="@+id/textViewValuationRank"
        android:layout_width="383dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:background="@color/border_color"
        android:padding="8dp"
        android:text="Valuation Rank"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDividendYield" />

    <TextView
        android:id="@+id/textViewDividendYield"
        android:layout_width="383dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:background="@color/border_color"
        android:padding="8dp"
        android:text="Dividend Yield"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAboutDangote" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="89dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:text="N890.04"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <TextView
        android:id="@+id/textViewChange"
        android:layout_width="89dp"
        android:layout_height="22dp"
        android:text="-0.5[34.8%]"
        android:textColor="@color/Surface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrice" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="306dp"
        android:layout_height="118dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <EditText
        android:id="@+id/editTextEmailAddress"
        android:layout_width="377dp"
        android:layout_height="143dp"
        android:background="@drawable/edittext_border"
        android:backgroundTint="@color/your_background_color"
        android:ems="10"
        android:hint=""
        android:inputType="textEmailAddress"
        android:textColor="@color/Surface"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChange"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/textViewPosition"
        android:layout_width="288dp"
        android:layout_height="28dp"
        android:padding="5dp"
        android:text="My Position                 35"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailAddress"
        app:layout_constraintTop_toTopOf="@+id/editTextEmailAddress" />

    <TextView
        android:id="@+id/textViewOpen"
        android:layout_width="287dp"
        android:layout_height="35dp"
        android:padding="8dp"
        android:text="Open                            10.56"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextEmailAddress"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/textViewPosition" />

    <TextView
        android:id="@+id/textViewPrevClose"
        android:layout_width="287dp"
        android:layout_height="33dp"
        android:padding="8dp"
        android:text="Prev. Close                 35.78"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/textViewOpen" />

    <TextView
        android:id="@+id/textViewMarketCap"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:text="Mkt. Cap                     N345.909B"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/editTextEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrevClose" />

    <ImageView
        android:id="@+id/ScokBackBtn"
        android:layout_width="44dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/arrow"
        app:layout_constraintEnd_toStartOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/DangotInvestBtn"
        style="@android:style/Widget.Button"
        android:layout_width="337dp"
        android:layout_height="43dp"
        android:background="@drawable/button_background"
        android:text="@string/invest"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewValuationRank"
        app:layout_constraintVertical_bias="0.108" />

</androidx.constraintlayout.widget.ConstraintLayout>
