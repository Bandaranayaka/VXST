<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/BackDebet"
            android:layout_width="67dp"
            android:layout_height="31dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/menu" />

        <TextView
            android:id="@+id/textView14.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite Your Friends With The Spark Code" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/Surface" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="Hi, Anne Folake"
                android:textColor="@color/Surface"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView9.4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="64dp"
                android:text="Primary Account"
                android:textColor="@color/Surface"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="3dp"
                android:text="3467-2344-876"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9.4" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="Available Account"
                android:textColor="@color/Surface"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10.1" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="3dp"
                android:text="N25,000,000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />
        </LinearLayout>

        <ImageView
            android:id="@+id/BackDebet"
            android:layout_width="220dp"
            android:layout_height="226dp"
            android:layout_marginStart="32dp"
            android:src="@drawable/concept" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="375dp"
        android:layout_marginBottom="260dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/FundButton"
            style="@android:style/Widget.Button"
            android:layout_width="153dp"
            android:layout_height="39dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/button_background"
            android:text="Fund Account"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:text="Recent Transaction "
            android:textColor="@color/Surface"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FundButton" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="25dp"
            android:text="Deposit"
            android:textColor="@color/border_color"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="224dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/edittext_border"
            android:backgroundTint="@color/your_background_color"
            android:ems="10"
            android:hint=" February 21, 2024"
            android:inputType="textEmailAddress"
            android:textColor="@color/Surface"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView11.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="Withdrawal"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

        <EditText
            android:id="@+id/TextTextEmailAddress"
            android:layout_width="224dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/edittext_border"
            android:backgroundTint="@color/your_background_color"
            android:ems="10"
            android:hint=" February 21, 2024"
            android:inputType="textEmailAddress"
            android:textColor="@color/Surface"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="175dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="204dp"
            android:layout_height="32dp"

            android:layout_marginStart="32dp"
            android:layout_marginTop="25dp"
            android:text="Invite Your Friends"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/BackDebet"
            android:layout_width="62dp"
            android:layout_height="65dp"
            android:layout_marginStart="48dp"
            android:src="@drawable/badge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="374dp"
            android:layout_height="43dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/edittext_border"
            android:backgroundTint="@color/your_background_color"
            android:ems="10"
            android:hint="    Invite Your Friends Using Star Badge"
            android:inputType="textEmailAddress"
            android:textColor="@color/Surface"
            app:cardCornerRadius="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/HomeBtn"
            android:layout_width="79dp"
            android:layout_height="38dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/hom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/BankTransferBtn"
            android:layout_width="79dp"
            android:layout_height="40dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="48dp"
            android:scaleType="fitCenter"
            android:src="@drawable/inves" />

        <ImageView
            android:id="@+id/TransactionBtn"
            android:layout_width="79dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/save"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
